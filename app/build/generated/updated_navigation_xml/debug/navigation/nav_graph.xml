<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/noteListFragment" >
<fragment
    android:id="@+id/noteListFragment"
    android:name="com.example.notesapp.ui.fragment.NoteListFragment"
    android:label="My Notes"
    tools:layout="@layout/fragment_note_list" >

    <action
        android:id="@+id/action_noteListFragment_to_addEditNoteFragment"
        app:destination="@id/addEditNoteFragment" />
    <action
        android:id="@+id/action_noteListFragment_to_noteDetailFragment"
        app:destination="@id/noteDetailFragment" />

</fragment>
<fragment
    android:id="@+id/addEditNoteFragment"
    android:name="com.example.notesapp.ui.fragment.AddEditNoteFragment"
    android:label="Add/Edit Note"
    tools:layout="@layout/fragment_add_edit_note" >

    <argument
        android:name="noteId"
        android:defaultValue="-1"
        app:argType="integer" />

    <action
        android:id="@+id/action_addEditNoteFragment_to_noteListFragment"
        app:destination="@id/noteListFragment" />

</fragment>
<fragment
    android:id="@+id/noteDetailFragment"
    android:name="com.example.notesapp.ui.fragment.NoteDetailFragment"
    android:label="Note Details"
    tools:layout="@layout/fragment_note_detail" >

    <argument
        android:name="noteId"
        app:argType="integer" />

    <action
        android:id="@+id/action_noteDetailFragment_to_addEditNoteFragment"
        app:destination="@id/addEditNoteFragment" />
    <action
        android:id="@+id/action_noteDetailFragment_to_noteListFragment"
        app:destination="@id/noteListFragment" />

</fragment>
</navigation>